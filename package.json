    "@angular-eslint/template-parser": "^14.1.2",
    "@angular/cli": "~14.1.2",
    "@angular/compiler-cli": "^14.1.0",
    "@codemirror/lang-javascript": "^6.1.4",
    "@commitlint/cli": "^17.4.4",
