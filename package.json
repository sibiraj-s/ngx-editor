{
  "private": true,
  "type": "module",
  "scripts": {
    "build:demo": "ng build demo",
    "build:lib": "ng build ngx-editor",
    "build": "npm run build:lib && npm run build:demo",
    "postbuild:lib": "node ./scripts/postbuild.js",
    "dev": "ng build ngx-editor --watch --configuration development",
    "demo": "ng serve demo --port 5002 --configuration development",
    "serve:ssr:demo": "node dist/demo/server/server.mjs",
    "ng": "ng",
    "lint": "ng lint",
    "format:md": "prettier **/*.md --write",
    "test:demo": "ng test demo --browsers ChromeHeadless --watch false",
    "test:lib": "ng test ngx-editor --browsers ChromeHeadless --watch false",
    "test": "npm run test:lib && npm run test:demo",
    "prepare": "is-ci || husky"
  },
  "engines": {
    "node": ">=20",
    "npm": ">=8.19"
  },
  "keywords": [
    "angular-editor",
    "angular-wysiwyg-editor",
    "wysiwyg-editor",
    "ngx-editor",
    "prosemirror",
    "angular-prosemirror",
    "angular-rich-text-editor",
    "angular-rte"
  ],
  "dependencies": {
    "@angular/animations": "^19.2.0",
    "@angular/common": "^19.2.0",
    "@angular/compiler": "^19.2.0",
    "@angular/core": "^19.2.0",
    "@angular/forms": "^19.2.0",
    "@angular/platform-browser": "^19.2.0",
    "@angular/platform-browser-dynamic": "^19.2.0",
    "@angular/platform-server": "^19.2.0",
    "@angular/router": "^19.2.6",
    "@angular/ssr": "^19.2.7",
    "express": "^4.18.2",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.1",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.9",
    "@angular/cli": "^19.2.7",
    "@angular/compiler-cli": "^19.2.0",
    "@codemirror/lang-javascript": "^6.2.3",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@floating-ui/core": "^1.6.9",
    "@floating-ui/dom": "^1.6.13",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^18.18.0",
    "@types/trusted-types": "~2.0.7",
    "angular-eslint": "19.3.0",
    "codemirror": "^6.0.1",
    "eslint": "^9.24.0",
    "eslint-config-pegasus": "^6.0.2",
    "husky": "^9.1.7",
    "is-ci": "^4.1.0",
    "jasmine-core": "~5.6.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "lint-staged": "^15.5.1",
    "ng-packagr": "^19.2.0",
    "picocolors": "^1.1.1",
    "prettier": "^3.5.3",
    "prettier-plugin-astro": "^0.14.1",
    "prosemirror-codemirror-6": "^1.0.1",
    "prosemirror-commands": "^1.7.1",
    "prosemirror-history": "^1.4.1",
    "prosemirror-inputrules": "^1.5.0",
